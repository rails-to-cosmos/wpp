{
    "defaults": {
        "report": "/tmp/echo"
    },
    "actions": [
        {
            "data": {
                "url": "http://echo.msk.ru/blog/echomsk/1834242-echo/"
            },
            "settings": {
                "visible": false,
                "user_agent": false,
                "filters":  {
                    "blacklist": {
                        "urls": ["http:\\/\\/.+?\\.css",
                                 ".*banner.*",
                                 ".*ads.*",
                                 ".*videos.*",
                                 ".*mediatoday.*",
                                 ".*vkontakte.*",
                                 ".*widget.*",
                                 ".*facebook.*",
                                 ".*counters.*",
                                 ".*data\\.24smi\\.net.*",
                                 "relap.io",
                                 "ads.adfox.ru",
                                 "vk.com",
                                 "ad.mail.ru",
                                 "doc.echoban.ru",
                                 "yandex.st",
                                 "fonts",
                                 "modernizr",
                                 "extreme-dm",
                                 "spylog",
                                 "cloudflare.com",
                                 "vengovision",
                                 "ru451",
                                 "medianetworks.ru",
                                 "smi2.net",
                                 "ddos-guard"]
                    }
                }
            },
            "type": "ADownload",
            "name": "article"
        },
        {
            "data": {
                "$": "section.content .actionBlock a.comm"
            },
            "settings": {
                "visible": false
            },
            "type": "AClick",
            "name": "article_with_comments",
            "target": "article"
        },
        {
            "data": {
                "$": ".pager a.ajax[href^=\"#comments\"]"
            },
            "settings": {
                "visible": false
            },
            "type": "APages",
            "name": "pages",
            "target": "article_with_comments"
        },
        {
            "data": {
                "$": ".commBlock[outerHTML]"
            },
            "settings": {
                "visible": false
            },
            "type": "AParseBySelector",
            "name": "comment",
            "target": "pages"
        },
        {
            "data": {
                "$": "[id]"
            },
            "settings": {
                "visible": true
            },
            "type": "AParseBySelector",
            "name": "id",
            "target": "comment"
        },
        {
            "data": {
                "$": ">div.onecomm>p.author span.about>strong.name"
            },
            "settings": {
                "visible": true
            },
            "type": "AParseBySelector",
            "name": "author",
            "target": "comment"
        },
        {
            "data": {
                "$": ">div.onecomm>p.commtext"
            },
            "settings": {
                "visible": true
            },
            "type": "AParseBySelector",
            "name": "body",
            "target": "comment"
        },
        {
            "data": {
                "$": ">div.onecomm>p.author>span.datetime.right"
            },
            "settings": {
                "visible": true
            },
            "type": "AParseBySelector",
            "name": "date",
            "target": "comment"
        }
    ]
}
